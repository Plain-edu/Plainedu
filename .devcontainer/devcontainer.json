{
  "name": "Plainedu Development Environment with MySQL",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/Plainedu",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "16"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss", 
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.hexeditor"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true
      }
    }
  },

  "containerEnv": {
    "DB_HOST": "localhost",
    "DB_USER": "root",
    "DB_PASSWORD": "plain",
    "DB_NAME": "plaindb"
  },

  "forwardPorts": [3000, 4000, 5173, 3306],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (Alternative)",
      "onAutoForward": "notify"
    },
    "4000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server", 
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL Database",
      "onAutoForward": "ignore"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "echo 'ðŸš€ PlainEdu Codespace with MySQL is ready! Use: ./start-dev.sh'",
  
  "remoteUser": "vscode"
}